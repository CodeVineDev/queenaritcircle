      <div
        class="mt-8 sm:mt-6 flex flex-wrap items-center justify-center gap-2 text-lg text-gray-600"
      >
        <div class="flex w-full justify-center">
          <img
            class="w-8 translate-x-4 rounded-[50%] border-4 border-white shadow-lg"
            src="/images/AT-IMG.jpg"
            alt="Atom Image"
          />
