<Layout class="relative">
  <div class="absolute h-23 w-full bg-gradient-to-b from-(--pink) to-white">
  </div>
  <Navbar />
  <!-- Hero page start -->
  <section class="mt-12 flex items-center justify-center pt-2 pb-20">
    <div class="m-auto w-[min(95%,1000px)] py-8 text-center tracking-wider">
      <p
        class="m-auto mb-8 sm:mb-6 w-max rounded-4xl border border-gray-200 px-5 py-2 text-sm font-bold text-(--blue) shadow-xl"
      >
        Tech Community
      </p>
      <h1
        class="sm:mb-8 mb-6 font-[(--mulish)] text-[clamp(35px,5vw,50px)] leading-[1.2] font-bold [text-wrap:balance] text-(--blue) sm:text-[clamp(50px,5vw,60px)] lg:text-[clamp(70px,5vw,80px)]"
      >
        Go from Learning to Earning
      </h1>
      <p
        class="mb-8 sm:mb-6 text-[clamp(14px,5vw,16px)] leading-[1.5] [text-wrap:balance] text-gray-600 sm:text-[clamp(16px,5vw,18px)]"
      >
        Master the interviewing, collaboration, and leadership skills that
        actually get you hired and promoted in tech
      </p>
      <div
        class="m-auto grid w-[min(90%,600px)] grid-cols-1 gap-6 sm:grid-cols-2"
      >
        <button
          ><a
            href="#"
            class="group flex items-center justify-center gap-4 rounded-[10rem] border border-(--blue) px-2 py-4 text-[16px] font-bold text-(--blue) shadow-xl transition-all duration-200 ease-in-out hover:shadow-none"
            >See Upcoming Events <iconify-icon
              icon="teenyicons:top-right-outline"
              class="text-(--blue) transition-all duration-200 ease-in-out group-hover:rotate-45"
              width="15"
              height="15"></iconify-icon></a
          ></button
        >
        <button
          ><a
            href="#"
            class="group flex items-center justify-center gap-4 rounded-[10rem] border border-(--pink) bg-(--pink) px-2 py-4 text-[16px] font-bold text-white transition-all duration-200 ease-in-out hover:border-(--blue) hover:bg-(--blue)"
